{
  "workbench.iconTheme": "vscode-icons",
  // エディタのプレビューを無効化
  "workbench.editor.enablePreview": false,
  // エディタのプレビューを無効化
  "workbench.startupEditor": "newUntitledFile",
  "git.autofetch": true,
  "git.confirmSync": false,
  // デフォルトのズームレベル
  "window.zoomLevel": 0,
  // タブ幅
  "editor.tabSize": 2,
  // 空白文字を表示する
  "editor.renderWhitespace": "boundary",
  // 入力した行を自動でフォーマット
  "editor.formatOnType": true,
  // 貼り付けを行ったときに自動でフォーマット
  "editor.formatOnPaste": true,
  // 保存時に自動でフォーマット
  "editor.formatOnSave": true,
  // ファイル保存時、同時に行われるアクション
  "editor.codeActionsOnSave": {
    "source.fixAll.prettier": "explicit"
  },
  // ファイルのパンくずリストを表示する
  "breadcrumbs.enabled": true,
  // アイコンテーマの更新通知を無効化
  "vsicons.dontShowNewVersionMessage": true,
  // file削除時に確認表示しない
  "explorer.confirmDelete": false,
  // 検索ビューの検索結果に行数を併記
  "search.showLineNumbers": true,
  // デバッグ中に行内に変数値を表示
  "debug.inlineValues": "on",
  // ファイル保存時、最終行に改行を挿入する(file最後に空行を残す)
  "files.insertFinalNewline": true,
  // ファイル保存時、最終行の改行を削除する(file最後に空行を残す)
  "files.trimFinalNewlines": true,
  // ファイル保存時、行末の空白を削除する
  "files.trimTrailingWhitespace": true,
  "git.enableSmartCommit": true,
  "workbench.colorTheme": "Spinel",
  // Ruby formatter
  "ruby.useLanguageServer": true,
  "ruby.lint": "rubocop",
  "ruby.format": "rubocop",
  "security.promptForLocalFileProtocolHandling": false,
  "explorer.confirmDragAndDrop": false,
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "editor.rulers": [
      120
    ],
    "editor.semanticHighlighting.enabled": true
  },
  "rubyLsp.rubyVersionManager": {
    "identifier": "none"
  },
  "rubyLsp.formatter": "auto",
  "github.copilot.chat.localeOverride": "ja",
  "markdown-pdf.mermaidServer": "https://unpkg.com/mermaid@10.4.0/dist/mermaid.min.js",
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "rubyLsp.featureFlags": {
    "all": true
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "git.ignoreRebaseWarning": true,
  "github.copilot.advanced": {
    "enable": true,
    "agentMode": true
  },
  "githubPullRequests.createOnPublishBranch": "never",
  "chat.agent.maxRequests": 20,
  "comments.thread.confirmOnCollapse": "never"
}
